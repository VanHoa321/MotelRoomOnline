@using MotelRoomOnline.Utilities
@model MotelRoomOnline.Models.Account
@{
    ViewData["Title"] = "Xem thông tin";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h4>Thông tin tài khoản</h4>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">Quản lý người dùng</li>
                        <li class="breadcrumb-item active">Thông tin tài khoản</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-primary">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label asp-for="FullName">Họ tên</label>
                                        <input type="text" asp-for="FullName" class="form-control" value="@Model.FullName">
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="AccountName">Tên tài khoản</label>
                                        <input type="text" asp-for="AccountName" class="form-control" value="@Model.AccountName">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group justify-content-center">
                                        <label style="margin-bottom:100px"></label>
                                        <img src="@Model.Avatar" style="width:120px; height:120px; margin-left:120px; border:2px solid #ccc; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);" />
                                    </div>
                                </div>
                            </div>                                                      
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Phone">Số điện thoại</label>
                                        <input type="text" asp-for="Phone" class="form-control" value="@Model.Phone">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Email">Email</label>
                                        <input type="text" asp-for="Email" class="form-control" value="@Model.Email">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Address">Địa chỉ</label>
                                <input type="text" asp-for="Address" class="form-control" value="@Model.Address">
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Gender">Giới tính</label>
                                        @if(Model.Gender == true)
                                        {
                                            <input type="text" asp-for="Gender" class="form-control" value="Nam">
                                        }
                                        else
                                        {
                                            <input type="text" asp-for="Gender" class="form-control" value="Nữ">
                                        }
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="DOB">Ngày sinh</label>
                                        <input type="text" asp-for="DOB" class="form-control" value="@Model.DOB.Value.ToString("dd/MM/yyyy")">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Status">Trạng thái</label>
                                        @if (Model.Status == true)
                                        {
                                            <input type="text" asp-for="Status" class="form-control" value="Đang hoạt động">
                                        }
                                        else
                                        {
                                            <input type="text" asp-for="Status" class="form-control" value="Đã bị khóa">
                                        }
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="RoleID">Phân quyền</label>
                                        @if (Model.RoleID == 1)
                                        {
                                            <input type="text" asp-for="RoleID" class="form-control" value="Quản trị viên">
                                        }
                                        else if (Model.RoleID == 2)
                                        {
                                            <input type="text" asp-for="RoleID" class="form-control" value="Chủ trọ">
                                        }
                                        else
                                        {
                                            <input type="text" asp-for="RoleID" class="form-control" value="Khách hàng">
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <a href="javascript:history.back()" class="btn btn-warning"><i class="fa-solid fa-rotate-left" style="color:white" title="Quay lại"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<script src="~/admin/assets/plugins/jquery/jquery.min.js"></script>


