@using MotelRoomOnline.Areas.Admin.Models
@using MotelRoomOnline.Utilities
@model IList<Account>

@{
    ViewData["Title"] = "Quản lý người dùng";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h4>Danh sách quản trị viên</h4>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">Quản lý người dùng</li>
                        <li class="breadcrumb-item active">Danh sách quản trị viên</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="User" asp-action="Create">
                                <i class="fa-solid fa-plus" title="Thêm mới quản trị viên"></i>
                            </a>
                        </div>
                        <div class="card-body">
                            <table id="example-table" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Hình ảnh</th>
                                        <th>Họ tên</th>
                                        <th>SĐT</th>
                                        <th>Email</th>
                                        <th>Địa chỉ</th>
                                        <th>Trạng thái</th>
                                        <th>Chức năng</th>
                                    </tr>
                                </thead>
                                <tbody id="showdata">
                                    @{
                                        int i = 1;
                                    }
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@(i++)</td>
                                            <td><img src="@item.Avatar" style="width:80px; height:80px" /></td>
                                            <td>@item.FullName</td>
                                            <td>@item.Phone</td>
                                            <td>@item.Email</td>
                                            <td>@item.Address</td>
                                            <td class="status-column">
                                                <a href="#"><i class="status-icon bi @((item.Status == true) ? "bi-check2 text-success" : "bi-x text-danger")" style="font-size:20px" title="@((item.Status == true) ? "Đang hoạt động" : "Đã bị khóa")"></i></a>
                                            </td>
                                            <td>
                                                <a asp-area="Admin" asp-controller="User" asp-action="Details"
                                                   asp-route-id="@item.AccountId" class="btn btn-info btn-sm"
                                                   title="Xem thông tin"><i class="fa-solid fa-eye"></i></a>                                                
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<script src="~/admin/assets/plugins/jquery/jquery.min.js"></script>


